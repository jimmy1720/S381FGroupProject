<!-- login.ejs -->
<html>
<head>
    <title>Login</title>
    <style>
        .container {
            max-width: 60%;
            margin: 50px auto;
            padding: 20px;
            font-family: Arial, sans-serif;
        }

        .login-section {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .social-login {
            margin-top: 20px;
            padding: 20px;
            border-top: 1px solid #ddd;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button, .social-btn {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button {
            background-color: #4CAF50;
            color: white;
        }

        .facebook-btn {
            background-color: #3b5998;
            color: white;
        }

        .google-btn {
            background-color: #db4a39;
            color: white;
        }

        .register-link {
            text-align: center;
            margin-top: 15px;
        }

        .error-message {
            color: red;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-section">
            <h2>Login</h2>
            <form action="/login" method="POST">
                <div>
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit">Login</button>
            </form>

            <div class="social-login">
                <h3>Or login with:</h3>
                <a href="/auth/facebook" class="social-btn facebook-btn">Login with Facebook</a>
                <a href="/auth/google" class="social-btn google-btn">Login with Google</a>
            </div>

            <div class="register-link">
                <p>Don't have an account? <a href="/register">Register here</a></p>
            </div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>
    </div>
</body>
</html>
