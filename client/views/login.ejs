<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <style>
        .container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            font-family: Arial, sans-serif;
        }

        .login-section {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .social-login {
            margin-top: 20px;
            padding: 20px;
            border-top: 1px solid #ddd;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .login-btn {
            background-color: #4CAF50;
            color: white;
        }

        .social-btn {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
            display: block;
            text-decoration: none;
        }

        .facebook-btn {
            background-color: #3b5998;
            color: white;
        }

        .google-btn {
            background-color: #db4a39;
            color: white;
        }

        .register-link {
            text-align: center;
            margin-top: 15px;
        }

        .error-message {
            color: red;
            margin: 10px 0;
            text-align: center;
        }

        .social-login h3 {
            text-align: center;
            font-size: 1.25rem;
            margin-bottom: 15px;
        }
        
        h2 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-section">
            <h2>Login</h2>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <% if (typeof message !== 'undefined' && message) { %>
                <div class="alert alert-success">
                    <%= message %>
                </div>
            <% } %>

            <form action="/login" method="POST">
                <div>
                    <label for="username">Username or Email:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit" class="login-btn">Login</button>
            </form>

            <!-- Conditionally show OAuth buttons -->
            <% if (typeof showFacebook !== 'undefined' && showFacebook || typeof showGoogle !== 'undefined' && showGoogle) { %>
                <div class="social-login">
                    <h3>Or login with:</h3>
                    <% if (typeof showFacebook !== 'undefined' && showFacebook) { %>
                        <a href="/auth/facebook" class="social-btn facebook-btn">Login with Facebook</a>
                    <% } %>
                    <% if (typeof showGoogle !== 'undefined' && showGoogle) { %>
                        <a href="/auth/google" class="social-btn google-btn">Login with Google</a>
                    <% } %>
                </div>
            <% } %>

            <div class="register-link">
                <p>Don't have an account? <a href="/register">Register here</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>