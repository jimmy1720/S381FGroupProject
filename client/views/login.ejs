<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <style>
        .container {
            max-width: 400px; /* Adjusted for a better mobile view */
            margin: 50px auto;
            padding: 20px;
            font-family: Arial, sans-serif;
        }

        .login-section {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9; /* Added a background color for better contrast */
        }

        .social-login {
            margin-top: 20px;
            padding: 20px;
            border-top: 1px solid #ddd;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px; /* Adjust font size */
        }

        .login-btn {
            background-color: #4CAF50;
            color: white;
        }

        .facebook-btn {
            background-color: #3b5998;
            color: white;
            margin-bottom: 10px; /* Ensure space below Facebook button */
            text-align: center; /* Center the text */
            display: block; /* Ensure button takes the full width */
            padding: 10px; /* Padding for button size */
            border-radius: 4px; /* Consistent border radius */
            text-decoration: none; /* Remove underline */
        }

        .google-btn {
            background-color: #db4a39;
            color: white;
            text-align: center; /* Center the text */
            display: block; /* Ensure button takes the full width */
            padding: 10px; /* Padding for button size */
            border-radius: 4px; /* Consistent border radius */
            text-decoration: none; /* Remove underline */
        }

        .register-link {
            text-align: center;
            margin-top: 15px;
        }

        .error-message {
            color: red;
            margin: 10px 0;
            text-align: center; /* Center the error message */
        }

        .social-login h3 {
            text-align: center; /* Center align the heading */
            font-size: 1.25rem; /* Adjust font size as needed */
            margin-bottom: 15px; /* Add space below the heading */
        }
         h2 {
            text-align: center; /* Center the heading */
            margin-bottom: 20px; /* Space below the heading */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-section">
            <h2>Login</h2>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <form action="/login" method="POST">
                <div>
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit" class="login-btn">Login</button>
            </form>

            <div class="social-login">
                <h3>Or login with:</h3>
                <a href="/auth/facebook" class="social-btn facebook-btn">Login with Facebook</a>
                <a href="/auth/google" class="social-btn google-btn">Login with Google</a>
            </div>

            <div class="register-link">
                <p>Don't have an account? <a href="/register">Register here</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>