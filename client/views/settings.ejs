<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Settings - Budget Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
  <div class="container my-5">
    <h1>Settings</h1>
    <p class="text-muted">Manage your account preferences.</p>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Account</h5>
        <form method="POST" action="/auth/update-settings">
          <div class="mb-3">
            <label class="form-label">Display name</label>
            <input name="displayName" class="form-control" value="<%= user?.displayName || '' %>" />
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email" type="email" class="form-control" value="<%= user?.email || '' %>" />
          </div>
          <button class="btn btn-primary" type="submit">Save changes</button>
        </form>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Preferences</h5>
        <form method="POST" action="/auth/update-prefs">
          <div class="form-check form-switch mb-2">
            <input class="form-check-input" type="checkbox" id="prefDark" name="darkMode" <%= (user?.prefs && user.prefs.darkMode) ? 'checked' : '' %>>
            <label class="form-check-label" for="prefDark">Dark mode (UI)</label>
          </div>
          <button class="btn btn-secondary" type="submit">Save preferences</button>
        </form>
      </div>
    </div>

    <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    <a href="/auth/logout" class="btn btn-link text-danger">Logout</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>